<style>
  .testimonial{
    margin:50px auto 60px;
    display:grid;
    grid-template-columns:repeat(auto-fit, minmax(350px, 1fr));
    grid-gap:20px;
  }
  .testimonial .card{
    position:relative;
    margin:0 auto;
    width:350px;
    background:rgba(247, 243, 243, 0);
    padding:20px;
    box-sizing:border-box;
    text-align:center;
    box-shadow:0 10px 40px rgba(0,0,0,.5);
    overflow:hidden;
  }
  .testimonial .card .layer{
    position:absolute;
    top:calc(100% - 2px);
    left:0;
    height:100%;
    width:100%;
    background:linear-gradient(#0db68c, #d3d015);
    z-index:1;
    transition:0.5s;
  }
  .testimonial .card:hover .layer{
    top:0;
  }
  .testimonial .card .content{
    position:relative;
    z-index:2;
  }
  .testimonial .card .content p{
    font-size:14px;
    line-height:13px;
  }
  

  .testimonial .card:hover .content .details span{
    color:#fff;
  }
</style>
 

    


<div class="container mt-5 text-center">
		 <div ><h5>Edit Details</h5>	</div>
  <div class="testimonial">
  
  
	



    <div class="card" >
      <div class="layer"></div>
      <div class="content ">

          <form action="/edit-userDetails" method="post"> 
           <input  value="{{user._id}}" name="userId" hidden> 
        <input class="mt-5" value="{{user.name}}" name="name" required><br>
        <label>Name</label><br>

         
        <input value="{{user.mobile}}" name="mobile" required>
        <br> <label>Mobile</label>

      
       <br> <input value="{{user.email}}" name="email" required><br>
            <label>Email</label>  <br>
	    
     <button class="btn btn-primary change mt-2" type="submit" ><span>Edit</span></button><br><br>
     <p style="color: red" >{{permissionMessage}}</p>
</form>



       
     </div>
    </div> 

	
  </div>
 </div>  