





<section class="vh-100" style="background-color: #508bfc;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <form action="/signup" method="post">


            <h3 class="mb-5">Sign up</h3>
            
            {{#if permissionMessage}}

            <p style="color:red;">{{permissionMessage}}</p>

            {{/if }}



             <div class="form-outline mb-4">
              <input type="text" onkeyup="validateName()" id="name" class="form-control form-control-lg" name="name" required/ >
              <label class="form-label">Name</label>
               <p class="text-danger" id="errorName"><p>
            </div>


            <div class="form-outline mb-4">
              <input type="email" onkeyup="validateEmail()"  id="email" class="form-control form-control-lg" name="email" required />
              <label class="form-label" for="typeEmailX-2">Email</label>
               <p class="text-danger" id="errorEmail"></p>
            </div>

            <div class="form-outline mb-4">
              <input type="password" onkeyup="validatePassword()" id="password" class="form-control form-control-lg" name="password" required/>
              <label class="form-label" for="typePasswordX-2">Password</label>
              <p class="text-danger" id="errorPassword"></p> 
            </div>
            
            <div class="form-outline mb-4">
              <input type="tel" id="mobile" onkeyup="validateMobile()" class="form-control form-control-lg" name="mobile" required/>
              <label class="form-label" for="typePasswordX-2">Mobile</label>
                            <p class="text-danger" id="errorMobile"></p> 

            </div>
            <!-- Checkbox -->
            <div class="form-check d-flex justify-content-start mb-4">
              <a href="/login">Already have an account?</a>
            </div>
                                          
            <button class="btn btn-primary btn-lg btn-block" id="submitbt" onclick="return validateForm()" type="submit">Sign Up</button>
             <p class="text-danger" id="errorSubmit"></p> 
            <hr class="my-4">
            </form>

