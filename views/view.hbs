



<header>


    <section class="container mt-5 bg-info ">
    <div class="row ">
      {{#each shirts}}
        <div class="col-md-4 ">

    <div class="card" style="width: 18rem;">
  <img class="img-fluid card-img-top " src={{this.img}}>
  <div class="card-body">
    <h5 class="card-title">{{this.name}}</h5>
    <p class="card-text">{{this.description}}</p>
    <a href="#" class="btn btn-primary">Add to cart</a>
  </div>
</div>
</div>

{{/each}}


</header>