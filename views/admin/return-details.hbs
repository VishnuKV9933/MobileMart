              <div id="card1" class="card-body">
              <h5 class="card-title">Delivery Details</h5>

              <!-- Default List group -->
              <ul class="list-group">
                <li class="list-group-item">Name    :{{order.deliveryDetails.name}}</li>
                <li class="list-group-item">Mobile  :{{order.deliveryDetails.mobile}}</li>
                <li class="list-group-item">Address :{{order.deliveryDetails.address}}</li>
