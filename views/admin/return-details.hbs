<div class="card">
            <div class="card-body">
              <h5 class="card-title">Return Orders  </h5>

              <!-- Table with stripped rows -->
              <table class="table">
                <thead class="table-primary" >
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                     <th scope="col">Image</th>
                    <th scope="col">Quantity</th>
                      <th scope="col">Price</th>
               
                  </tr>
                </thead>
                <tbody> 
                  {{#each returnOrders}}
                  <tr>
                    <th scope="row">1</th>
                    <td>{{this.product.name}}</td>
                    <td>
                      <img style="width:40px ;height:40px" src="/images/product/{{this.product.img.[0]}}" alt="" >
                    </td>
                    <td>{{this.quantity}}</td>
                    
                   <td>Rs.{{this.product.price}}</td>

                   
                    {{/each}}
                  </tr>
                </tbody>
              </table>
              <!-- End Table with stripped rows -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#verticalycentered">
                Change Status
              </button>
            </div>
          </div>
              
              <!-- Vertically centered Modal -->
              
              <div class="modal fade" id="verticalycentered" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title">Change Status</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    

                <div class="modal-body">
                        <select name="" id="changeReturnstatus" style="width:100%;height: 30px;">
                        
                           
                            <option>Return confirmed</option>
                        </select>
                    </div>

                   
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                      <button type="button" onclick="changeReturnStatus('{{order.orderId}}')" class="btn btn-primary"  data-bs-dismiss="modal">Save changes</button>
                    </div>
                  </div>
                </div>
              </div><!-- End Vertically centered Modal-->

            </div>
          </div>
             


