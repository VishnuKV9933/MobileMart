                              var myChart;
                              var myChart2;
                              var myChart3
                              var chart1
                              var chart2
                              var chart3

                            window.onload = () => {
                            dailyReport()
                            weeklyReportPayment()
                            };


                              
                             function dailyReport(){
                                   
                              chart1 = true;


                            const data = {
                                labels: [
                                  {{#each dailySale}}'{{_id}}',{{/each}}
                                ],
                                datasets: [{
                                  label: 'daily sales',
                                  data: [{{#each dailySale}}'{{totalAmount}}',{{/each}}],
                                  backgroundColor: [
                                    'rgb(103 119 239)',
                                    'rgb(102 187 106)',
                                    'rgb(54, 162, 235)',
                                    'rgb(255, 99, 132)'
                                  ]
                                }]
                              };
                              
                              const config = {
                                type: 'line',
                                data: data,
                                options: {
                                  aspectRatio:3,
                                  responsive:true
                                }
                              }; 
                              if(chart2){
                                myChart2.destroy()
                              }
                              if(chart3){
                                myChart3.destroy()
                              }         
                                        
                            myChart = new Chart(document.getElementById('line-chart'), config)

                                                  
                            } 

                            



                            function monthlyReport(){
                             
                              chart2 = true;


                            const data = {
                                labels: [
                                  {{#each monthlySales}}'{{_id}}',{{/each}}
