  <main id="main" class="main">
  <script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.1.min.js"></script>
        <script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/jquery.dataTables.min.js"></script>
      







<table class="table" id="myTable">
    {{!-- <a href="/admin/add-products" class="btn btn-success ml-auto">ADD Product</a> --}}
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Options</th>

      {{!-- <th scope="col">Image</th> --}}
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      {{!-- <th scope="row">1</th> --}}
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      {{!-- <td>{{this.password}}</td> --}}
         {{#if this.status}}
          <td><a href="/admin/block-user/{{this._id}}" class="btn btn-primary">Block</a>
          {{else}}
          <td><a href="/admin/unblock-user/{{this._id}}" class="btn btn-primary">Unblock</a>
         {{/if}}


      <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete {{this.name}}')">Delete</a></td>
        {{!-- <td><img style="width: 50px; height:50px" src="{{this.img}}" alt=""></td> --}}
    </tr>
    {{/each}}
  {{!-- <button  class='btn btn-info' ><a href="/admin/logout" style="color:white ; text-decoration: none;">Logout</a> </button> --}}
  </tbody>
</table>




<script>
 $(document).ready(function(){
        $('#myTable').DataTable();
    });

</script>

</main>